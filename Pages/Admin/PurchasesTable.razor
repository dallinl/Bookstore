<h3>PurchasesTable</h3>

<table class="table table-sm table-bordered table-striped table-hover">

    <thead>
        <tr>
            <th colspan="5" class="text-center">@TableTitle</th>
        </tr>
    </thead>

    <tbody>
        @if (Checkouts?.Count() > 0)
            {
                @foreach (Checkout p in Checkouts)
                {
                    <tr>

                        <td>@p.Name</td>
                        <td>@p.City</td>
                        <td>Title</td>
                        <td>Quantity</td>

                        <td>
                            <button class="btn btn-sm btn-danger" @onclick="@(x=>PurchaseSelected.InvokeAsync(p.CheckoutId))">
                                @ButtonLabel
                            </button>
                        </td>
                    </tr>

                    @foreach (BasketLineItem bli in p.Lines)
                    {
                        <tr>
                            <td colspan="2"> </td>
                            <td>@bli.Books.Title</td>
                            <td>@bli.Quantity </td>
                        </tr>
                    }
                }
            }
        else
            {
                <tr>
                    <td colspan="5" class="text-center">No Orders </td>
                </tr>
            }
    </tbody>

</table>


@code {
    [Parameter]
    public string TableTitle { get; set; } = "Purchases";

    [Parameter]
    public IEnumerable<Checkout> Checkouts { get; set; }

    [Parameter]
    public string ButtonLabel { get; set; } = "Shipped";

    [Parameter]
    public EventCallback<int> PurchaseSelected { get; set; }

}
