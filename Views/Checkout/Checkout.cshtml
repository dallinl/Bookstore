@{
}

@model Checkout 


<h2> Checkout Now</h2>
<p> Please enter your details below. </p>

<form method="post" asp-controller="Checkout" asp-action="Checkout">

    <div asp-validation-summary="All" class="text-danger"> </div>

    <h4> Ship to:</h4>
    <div class="form-group">
        <label asp-for="Name"> Name </label>
        <input asp-for="Name" class="form-control" />
    </div>

    <h4> Address:</h4>
    <div class="form-group">
        <label asp-for="AddressLine1">Address 1</label>
        <input asp-for="AddressLine1" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AddressLine2">Address 2</label>
        <input asp-for="AddressLine2" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AddressLine3">Address 3</label>
        <input asp-for="AddressLine3" class="form-control" />
    </div>

    <h4> City:</h4>
    <div class="form-group">
        <label asp-for="City"> City </label>
        <input asp-for="City" class="form-control" />
    </div>

    <h4> State:</h4>
    <div class="form-group">
        <label asp-for="State"> State </label>
        <input asp-for="State" class="form-control" />
    </div>

    <h4> Zip:</h4>
    <div class="form-group">
        <label asp-for="Zip"> Zip </label>
        <input asp-for="Zip" class="form-control" />
    </div>

    <h4> Country:</h4>
    <div class="form-group">
        <label asp-for="Country"> Country </label>
        <input asp-for="Country" class="form-control" />
    </div>

    <h4> Anonymous:</h4>
    <div class="checkbox">
        <label>
            <input asp-for="Anonymous" /> Donate Anonymously?
        </label>
    </div>

    <div class="float-end">
        <input class="btn btn-primary" type="submit" value="Send Donation" />
    </div>
</form>
